#include <stdio.h>
#include <stdlib.h>
#include <errno.h>
#include <sys/iofunc.h>
#include <sys/netmgr.h>
#include <pthread.h>

#define FILE_LOCATION "/tmp/trafficLightServer.info"

typedef struct{
	int serverProcessId;
	int serverChannelId;
}serverIds;

size_t read_data( FILE *fp, serverIds *p )
{
    return( fread( p, sizeof( serverIds ), 1, fp ) );
}
int main(void) {
	serverIds ids;
	FILE *file;
	file = fopen(FILE_LOCATION, "r");
	if(file != NULL){
		if(read_data(file, &ids)!= 0){
			printf("%d\n", ids.serverProcessId);
			printf("%d\n", ids.serverChannelId);
		}else{
			printf("ERROR: Cannot read file\n");
		}

	}else{
		printf("Cannot open the file\n");
	}
	fclose(file);
	return EXIT_SUCCESS;
}
