	print("State: %d\n", CurrentState);
}
int main(void) {
	while(!done){
		switch(CurrentState){
		case State0:
			initialise0();
			CurrentState = State1;
			break;
		case State1:
			doSomething1();
			if(Test1())
				CurrentState = State3;
			else
				CUrrentState = State2;
			break;
		case State2:
			doSomething1();
			if(Test2())
				CurrentState = State3;
			else
				CurrentState = State0;
		}
