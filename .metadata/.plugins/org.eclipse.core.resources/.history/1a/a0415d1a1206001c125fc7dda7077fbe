#include <stdio.h>
#include <stdlib.h>

enum states {
	state0,
	state1,
	state2,
	state3,
	state4,
	state5,
	stat6,
};

void singlestep_trafficlight_statemachine(enum states * currentState){
	switch (currentState){
	case state0:
		currentState = state1;
		break;
	case state1:
		printf("EWR-NSR(%d)", currentState);
		currentState = state2;
		break;
	case state2:
		break;
	case state3:
		break;
	case state4:
		break;
	case state5:
		break;
	case state6:
		break;
	}
}


int main(int argc, char *argv[]) {
	printf("Fixed Sequence Traffic Lights State Machine\n");
	int runTimes = 30, counter = 0;
	enum states currentState = state0;
	while(counter < runtimes){
		singlestep_trafficlight_statemachine(&currentState);
		counter++;
	}
	return EXIT_SUCCESS;
}
